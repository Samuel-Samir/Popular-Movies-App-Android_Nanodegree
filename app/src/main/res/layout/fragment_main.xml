<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_fragment"
    tools:context="com.example.android.popularmoviesapp.Fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/move_recyclerView"
        android:background="@color/background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_favorites"
        android:orientation="horizontal"
        android:background="@color/background"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nofavorites"
            android:textColor="@color/white"
            android:textSize="@dimen/d32"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/d85"
            />
    </LinearLayout>

</RelativeLayout>
